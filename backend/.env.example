# ============================================================
# SajuOS Backend Environment Variables
# ============================================================

# OpenAI
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-4o

# KASI API (선택)
KASI_API_KEY=

# ============================================================
# 🔥 Supabase (필수 - DB 영구 저장)
# ============================================================
# Supabase Dashboard > Settings > API 에서 확인
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJI...

# ============================================================
# 🔥 이메일 발송 (Resend)
# ============================================================
# https://resend.com 에서 API Key 발급
RESEND_API_KEY=re_xxxx
EMAIL_FROM=SajuOS <noreply@sajuos.com>
EMAIL_REPLY_TO=support@sajuos.com

# ============================================================
# 프론트엔드 URL (이메일 링크용)
# ============================================================
FRONTEND_URL=https://sajuos.com

# ============================================================
# Redis (선택 - 백그라운드 큐)
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# CORS
# ============================================================
ALLOWED_ORIGINS=http://localhost:3000,https://sajuos.com,https://www.sajuos.com

# ============================================================
# 프리미엄 리포트 설정
# ============================================================
REPORT_MAX_CONCURRENCY=2
REPORT_MAX_RETRIES=3
REPORT_RULECARD_TOP_LIMIT=100
REPORT_TOTAL_TIMEOUT=600
